{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
    <p>Liste des pizzérias :</p>
    <table>
        <tr>
            <th>Nom de la pizzéria</th>
            <th>Téléphone</th>
            <th></th>
        </tr>
        {% for pizzeria in pizzerias %}
            <tr>
                <td>{{ pizzeria.nom }}</td>
                <td>
                    <i class="fa fa-phone" aria-hidden="true"></i>
                    {{ pizzeria.numTelephone }}
                </td>
                <td>
                    <a href="{{ path("app_pizzeria_detail", {"pizzeriaId":pizzeria.id}) }}">
                        <i class="fa fa-caret-square-o-right tp-link" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
    <br />
    <a href="#">Ajouter une pizzeria</a>


    <p>Liste des pizzas :</p>
    <div class="tp-pizzas">
        {% for pizza in pizzas %}
            <div class="tp-pizza-listing">
                <a href="{{ path("app_pizza_detail", {"pizzaId": pizza.id}) }}">
                    <i class="fa fa-caret-square-o-right tp-link" aria-hidden="true"></i>
                    <span>{{ pizza.nom }}</span>
                </a>
            </div>
        {% endfor %}
    </div>
    <br />
    <a href="#">Ajouter une pizza</a>
{% endblock %}
